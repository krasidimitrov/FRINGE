<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .dragPanel{
      background-color: #ffebcd;
      width: 300px;
      height: 300px;
    }

    .dropPanel{
      background-color: #dcdcdc;
      width: 300px;
      height: 300px;
    }
  </ui:style>
  <g:HTMLPanel>
  <g:HTMLPanel styleName="{style.dragPanel}" ui:field="dragStartPanel">
    <g:Label ui:field="notADrag">Not a drag</g:Label>
    <g:Label ui:field="aDrag">A DRAG THAT I CAN SEE</g:Label>
  </g:HTMLPanel>
  <g:HTMLPanel styleName="{style.dropPanel}" ui:field="dropPanel">

  </g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder>