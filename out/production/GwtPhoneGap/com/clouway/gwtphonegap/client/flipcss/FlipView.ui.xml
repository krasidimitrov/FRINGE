<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style field="style" type="com.clouway.gwtphonegap.client.flipcss.FlipView.Style" >
    .frontPanel{
      background-color: #f08080;
      width: 300px;
      height: 300px;
      position: absolute;
      z-index: 2;

      -webkit-backface-visibility:hidden;

      position: absolute;
      top: 0;
      left: 0;
    }

    .backPanel{
      background-color: #e6e6fa;
      width: 300px;
      height: 300px;
      position: absolute;
      -webkit-transform:rotateY(180deg);

      -webkit-backface-visibility:hidden;

      position: absolute;
      top: 0;
      left: 0;
    }

    .flipStyle{
      -webkit-transition: 0.6s;
      -webkit-transform-style: preserve-3d;

      position: relative;
      width: 300px;
      height: 300px;
    }

    .flipStyle2{
      -webkit-transform:rotateY(180deg);
    }

    .flip-container {
      -webkit-perspective: 1000;
    }


      /*.backPanel:HOVER{*/
      /*z-index: 2;*/
    /*}*/
    /*.frontPanel:hover{*/
      /*z-index: 1;*/
    /*}*/
  </ui:style>

  <g:HTMLPanel styleName="{style.flip-container}">
    <g:HTMLPanel ui:field="flipPanel" styleName="{style.flipStyle}">
     <g:HTMLPanel ui:field="frontPanel" styleName="{style.frontPanel}">
       <g:Label>FRONT</g:Label>
     </g:HTMLPanel>
     <g:HTMLPanel ui:field="backPanel" styleName="{style.backPanel}">
       <g:Label>BACK</g:Label>
     </g:HTMLPanel>
    </g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder>